<UserControl x:Class="prototype.View.Add"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prototype.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="550"
             Background="White">
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Enter Details" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Name:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox Width="300" Height="30" Margin="0,0,0,20" />
            <TextBlock Text="ID Number:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox Width="300" Height="30" Margin="0,0,0,20" />
            <TextBlock Text="Time:" FontSize="16" Margin="0,0,0,5"/>
            <ComboBox x:Name="StartTimeComboBox">
                <ComboBoxItem Content="08:00" />
                <ComboBoxItem Content="12:30" />
                <ComboBoxItem Content="15:45" />
            </ComboBox>
            <Button Content="Submit" Width="100" Height="40" Margin="0,20,0,0" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
