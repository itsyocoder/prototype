<UserControl x:Class="prototype.View.Remove"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prototype.View"
             mc:Ignorable="d" 
             Background="white"
             d:DesignHeight="450" d:DesignWidth="550">
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Delete Record" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="ID Number:" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="IdNumberTextBox" Width="300" Height="30" Margin="0,0,0,20" />
            <Button Content="Confirm" Width="100" Height="40" Margin="0,20,0,0" HorizontalAlignment="Center" Click="Confirm_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
