<UserControl x:Class="prototype.View.Cevent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:prototype.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="850"
             Style="{StaticResource Page_Style}"
             Background="White">
    
    <Border BorderBrush="Black" BorderThickness="2"
            CornerRadius="3" Padding="10" Background="White">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!--Title-->
            <TextBlock Grid.Row="0" Text="Create Event"
                       FontSize="32" FontWeight="Bold"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left" Margin="0,0,0,10"/>
            
            <!--Content-->
            <Grid Grid.Row="1" Margin="0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!--Eventname-->
                <TextBlock Grid.Column="0" Text="sheeshable " VerticalAlignment="Center" Margin="5"/>
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="5" />

                

            </Grid>
        </Grid>
    </Border>
</UserControl>
